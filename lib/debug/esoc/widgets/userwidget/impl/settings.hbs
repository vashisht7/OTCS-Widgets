        class="esoc-setting-status-privacySettings csui-facet-panel binf-col-lg-6 binf-col-md-12 binf-col-sm-12 binf-col-xs-12">
      <div class="esoc-setting-name">{{ messages.privacySettingsForStatusMessages}}</div>
      <span class="esoc-sub-setting-name">{{ messages.notifyMyUpdatesTo}}</span>

