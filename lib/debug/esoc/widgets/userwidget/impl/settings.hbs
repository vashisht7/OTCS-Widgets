        <div class="csui-filter-name">
            <label for="esoc_privacySettings_{{messages.FOLLOW}}" class="csui-name" title="{{messages.privacyFollow}}">
                {{messages.privacyFollow}}
	    </label>
        </div>
      </div>

      <div class="csui-facet-item">
        <div class="esoc-settings-selection-label">
          <input type="radio" name="{{messages.CONTENT_PRIVACY}}" value="{{messages.NONE}}"
                 id="esoc_privacySettings_{{messages.NONE}}" class="esoc_setting_edit_field"
                 {{#if settings.contentPrivacyNone}}checked{{/if}} >
          <span id="esoc_privacySettings_{{messages.NONE}}_radio"
                class="{{#if settings.contentPrivacyNone}} icon-radiobutton-selected {{else}} icon-radiobutton {{/if}}"></span>
        </div>

        <div class="csui-filter-name">
            <label for="esoc_privacySettings_{{messages.NONE}}" class="csui-name" title="{{messages.privacyNone}}">
                {{messages.privacyNone}}
            </label>
        </div>
      </div>

    </div>
  {{/if}}
  {{#if settings.statusPrivacy}}
