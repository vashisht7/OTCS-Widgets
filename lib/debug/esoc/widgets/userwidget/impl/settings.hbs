                class="{{#if settings.statusPrivacyFollow}} icon-radiobutton-selected {{else}} icon-radiobutton {{/if}}"></span>
        </div>

        <div class="csui-filter-name">
            <label for="esoc_statusPrivacySettings_{{messages.FOLLOW}}" class="csui-name" title="{{messages.privacyFollow}}">
                {{messages.privacyFollow}}
	    </label>
        </div>
      </div>

      <div class="csui-facet-item">
        <div class="esoc-settings-selection-label">
          <input type="radio" name="{{messages.STATUS_PRIVACY}}" value="{{messages.NONE}}"
                 id="esoc_statusPrivacySettings_{{messages.NONE}}" class="esoc_setting_edit_field"
                 {{#if settings.statusPrivacyNone}}checked{{/if}} >
          <span id="esoc_statusPrivacySettings_{{messages.NONE}}_radio"
                class="{{#if settings.statusPrivacyNone}} icon-radiobutton-selected {{else}} icon-radiobutton {{/if}}"></span>
        </div>

        <div class="csui-filter-name">
            <label for="esoc_statusPrivacySettings_{{messages.NONE}}" class="csui-name" title="{{messages.privacyNone}}">
                {{messages.privacyNone}}
            </label>
        </div>
      </div>

    </div>
  {{/if}}
</div>
