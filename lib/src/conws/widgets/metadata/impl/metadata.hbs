<div class="conws-metadata tile content-tile">

    {{#unless hideHeader}}
        <div class="tile-header">

            <div class="tile-type-icon">
                <div class="title-icon {{icon}}"></div>
            </div>

            <div class="tile-title">
                <h2 class="csui-heading">{{title}}</h2>
            </div>

        </div>
    {{/unless}}

    <div class="tile-content metadata-tile-content">
		<div class="form-metadata">
			{{#each items}}
				<div class="form-metadata{{@index}}"/>
			{{/each}}
		</div>
    </div>

</div>

