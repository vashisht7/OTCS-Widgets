          },
          "bottomRight": {
            "fields": {
              "label": {
                "type": "otcs_multilingual_string"
              },
              "value": {
                "type": "otconws_customcolumn"
              }
            }
          }
        }
      },
      "expandedView": {
        "fields": {
          "orderBy": {
            "fields": {
              "sortColumn": {
                "type": "otconws_customcolumn"
              },
              "sortOrder": {
                "type": "select",
                "optionLabels": [ "Ascending", "Descending" ]
              }
            }
          },
          "customColumns": {
            "items": {
              "fields": {
                "key": {
                  "type": "otconws_customcolumn"
                }
              }
            }
          }
        }
      }
    }
  }
